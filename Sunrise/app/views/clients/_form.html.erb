<div class="panel panel-default", style="margin: 0px auto; max-width: 800px;">
  <div class="panel-heading">New Invoice</div>
    <div class="panel-body">

      <%= form_for @client do |f| %>
        <div class="form-group">
        <%= f.text_field :name, :placeholder => "Company Name", class: "form-control" %>
        <%= error_span(@client[:name]) %>
        </div>
        <div class="form-group">
        <%= f.text_field :address, :placeholder => "Company Address", class: "form-control" %>
        <%= error_span(@client[:address]) %>
        </div>
        <div class="form-group">
        <%= f.text_field :telephone, :placeholder => "Telephone", class: "form-control" %>
        <%= error_span(@client[:telephone]) %>
        </div>
        <div class="form-group">
        <%= f.email_field :email, :placeholder => "Email Address", class: "form-control" %>
        <%= error_span(@client[:email]) %>
        </div>
        <div style="margin-top: 20px;">
          <%= f.button :submit, :class => 'btn btn-primary' %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                        clients_path, :class => 'btn btn-default' %>
        </div>
      <% end %>

    </div>
</div>
